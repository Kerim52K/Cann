<div class="controls">
  <label>Başlık</label>
  <input type="text" id="inputTitle" value="Affet Beni">

  <label style="margin-top:10px">Mesaj</label>
  <textarea id="inputMessage">Sana yanlış yaptım. Biliyorum, kelimeler yetmez ama kalbim gerçekten pişman. Lütfen beni affet.</textarea>

  <label style="margin-top:10px">Gönderen adı</label>
  <input type="text" id="inputSender" value="Okan abi">

  <label style="margin-top:10px">Arka plan rengi</label>
  <select id="bgSelect">
    <option value="#fff0f3">Pembe Ton</option>
    <option value="#f0fbff">Mavi Ton</option>
    <option value="#fffaf0">Sıcak Ton</option>
  </select>

  <div class="btn-row">
    <button id="applyBtn" class="tiny">Uygula</button>
    <button id="shareBtn" class="tiny secondary">Paylaş</button>
    <button id="downloadBtn" class="tiny">PNG İndir</button>
  </div>

  <div style="font-size:13px;color:#777;margin-top:12px">Şablon, birmesajmutluluk.com'daki "Affet Beni" tarzına benzer şekilde oluşturulmuştur. İstersen düzenleyip kişiselleştirebilirsin.</div>
</div>

  </div>  <script>
    // Basit etkileşimler
    const inputTitle = document.getElementById('inputTitle');
    const inputMessage = document.getElementById('inputMessage');
    const inputSender = document.getElementById('inputSender');
    const applyBtn = document.getElementById('applyBtn');
    const preview = document.getElementById('preview');
    const titleEl = document.getElementById('title');
    const messageEl = document.getElementById('message');
    const avatarEl = document.getElementById('avatar');
    const heartsWrap = document.getElementById('hearts');
    const bgSelect = document.getElementById('bgSelect');
    const shareBtn = document.getElementById('shareBtn');
    const downloadBtn = document.getElementById('downloadBtn');

    function updatePreview(){
      titleEl.textContent = inputTitle.value || 'Affet Beni';
      messageEl.textContent = inputMessage.value || '';
      const sender = inputSender.value || '';
      avatarEl.textContent = sender.split(' ').map(s=>s[0]||'').slice(0,2).join('').toUpperCase();
      // background
      document.documentElement.style.setProperty('--bg', bgSelect.value);
      triggerHearts();
    }

    applyBtn.addEventListener('click', updatePreview);
    // live
    inputMessage.addEventListener('input', ()=>{ messageEl.textContent = inputMessage.value });

    // simple animated hearts
    function triggerHearts(){
      heartsWrap.innerHTML = '';
      for(let i=0;i<6;i++){
        const h = document.createElement('div');
        h.className='heart';
        const left = Math.random()*120 - 20;
        const bottom = Math.random()*40;
        h.style.left = left + 'px';
        h.style.bottom = bottom + 'px';
        const scale = 0.8 + Math.random()*0.8;
        h.style.transform += ' scale('+scale+')';
        heartsWrap.appendChild(h);
        // animate
        h.animate([
          {transform: `translateY(0) scale(${scale}) rotate(-45deg)`, opacity:0.95},
          {transform: `translateY(-120px) scale(${scale*0.6}) rotate(-45deg)`, opacity:0}
        ],{duration:2200+Math.random()*1000,delay:i*120,iterations:1,easing:'ease-out'});
      }
    }

    // share
    shareBtn.addEventListener('click', async ()=>{
      try{
        const text = `${titleEl.textContent}\n\n${messageEl.textContent}\n\n- ${inputSender.value}`;
        if(navigator.share){
          await navigator.share({title:titleEl.textContent,text});
        } else {
          // fallback: copy to clipboard
          await navigator.clipboard.writeText(text);
          alert('Metin panoya kopyalandı — paylaşmak için yapıştırabilirsiniz.');
        }
      }catch(e){alert('Paylaşım desteklenmiyor veya hata oluştu.');}
    });

    // download as image (uses html2canvas CDN)
    downloadBtn.addEventListener('click', async ()=>{
      if(!window.html2canvas){
        const script = document.createElement('script');
        script.src = 'https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js';
        document.body.appendChild(script);
        script.onload = () => createImage();
      } else createImage();

      async function createImage(){
        const clone = preview.cloneNode(true);
        // remove controls inside clone if any
        clone.style.width = '800px';
        clone.style.padding = '44px';
        const canvas = await html2canvas(clone, {scale:2,backgroundColor:null});
        const data = canvas.toDataURL('image/png');
        const a = document.createElement('a');
        a.href = data; a.download = 'affet-beni.png';
        document.body.appendChild(a); a.click(); a.remove();
      }
    });

    // initialize
    updatePreview();
  </script></body>
</html>
